<h1>Reports</h1>

<% Year.all.each do |year| %>
  <h2><%= year %></h2>
  
  <% %w(race numbers age_groups).each do |report| %>
    <h3><%= report.humanize %></h3>
    <ul>
      <% year.races.each do |race| %>
        <li><%= link_to race, :controller => 'reports', :action => report, :id => race.id %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>